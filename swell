    top: 0;
    z-index: 10;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    opacity: 0;
    transform: translateY(-50px);
    animation: slideIn 1s forwards 0.3s; /* Slide-in animation for header */
}

header nav ul {
    list-style-type: none;
    text-align: center;
}

header nav ul li {
    display: inline;
    margin: 0 20px;
    opacity: 0; /* Start hidden */
